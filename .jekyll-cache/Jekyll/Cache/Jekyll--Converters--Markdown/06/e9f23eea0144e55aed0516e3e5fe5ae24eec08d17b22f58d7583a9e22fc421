	<span class="kt">void</span> <span class="nf">eventProc</span><span class="o">()</span> <span class="o">{</span>
		<span class="c1">// ë§Œë“  ì´ë²¤íŠ¸ í•¸ë“¤ëŸ¬ë¥¼ ë©”ëª¨ë¦¬ì— ì˜¬ë¦¬ê¸°</span>
		<span class="nc">MyHdlr</span> <span class="n">mh</span> <span class="o">=</span> <span class="k">new</span> <span class="nc">MyHdlr</span><span class="o">();</span>
		<span class="c1">// ì´ë²¤íŠ¸í•¸ë“¤ëŸ¬ë‘ ë²„íŠ¼ ì—°ê²°í•˜ê¸°</span>
		<span class="n">bExit</span><span class="o">.</span><span class="na">addMouseListener</span><span class="o">(</span><span class="n">mh</span><span class="o">);</span>
	<span class="o">}</span>
	<span class="c1">// ì´ë²¤íŠ¸ í•¸ë“¤ëŸ¬ ë§Œë“¤ê¸°</span>
<span class="c1">//	class MyHdlr implements MouseListener {</span>
	<span class="kd">class</span> <span class="nc">MyHdlr</span> <span class="kd">extends</span> <span class="nc">MouseAdapter</span> <span class="o">{</span> <span class="c1">// ë©”ì†Œë“œê°€ 2ê°œì´ìƒì¼ ë•Œ Adapterë¥¼ ì“°ë©´ í¸í•˜ë‹¤</span>
		<span class="kd">public</span> <span class="kt">void</span> <span class="nf">mouseClicked</span><span class="o">(</span><span class="nc">MouseEvent</span> <span class="n">e</span><span class="o">)</span> <span class="o">{</span>
			<span class="nc">Object</span> <span class="n">obj</span> <span class="o">=</span> <span class="n">e</span><span class="o">.</span><span class="na">getSource</span><span class="o">();</span> <span class="c1">// ëˆŒë ¤ì§„ì• </span>
			<span class="k">if</span><span class="o">(</span><span class="n">obj</span> <span class="o">==</span> <span class="n">bExit</span><span class="o">)</span> <span class="o">{</span>
				<span class="nc">System</span><span class="o">.</span><span class="na">exit</span><span class="o">(</span><span class="mi">0</span><span class="o">);</span>
			<span class="o">}</span>
		<span class="o">}</span>
	<span class="o">}</span>
	<span class="kd">public</span> <span class="kd">static</span> <span class="kt">void</span> <span class="nf">main</span><span class="o">(</span><span class="nc">String</span><span class="o">[]</span> <span class="n">args</span><span class="o">)</span> <span class="o">{</span>
		<span class="nc">InfoEvtTest3</span> <span class="n">it</span> <span class="o">=</span> <span class="k">new</span> <span class="nc">InfoEvtTest3</span><span class="o">();</span>
