		<span class="kd">var</span> <span class="nx">weeks</span> <span class="o">=</span> <span class="k">new</span> <span class="nb">Array</span><span class="p">(</span><span class="dl">'</span><span class="s1">ì¼</span><span class="dl">'</span><span class="p">,</span> <span class="dl">'</span><span class="s1">ì›”</span><span class="dl">'</span><span class="p">,</span> <span class="dl">'</span><span class="s1">í™”</span><span class="dl">'</span><span class="p">,</span> <span class="dl">'</span><span class="s1">ìˆ˜</span><span class="dl">'</span><span class="p">,</span> <span class="dl">'</span><span class="s1">ëª©</span><span class="dl">'</span><span class="p">,</span> <span class="dl">'</span><span class="s1">ê¸ˆ</span><span class="dl">'</span><span class="p">,</span> <span class="dl">'</span><span class="s1">í† </span><span class="dl">'</span><span class="p">);</span>
<span class="c1">// 		var weeks = ['ì¼', 'ì›”', 'í™”', 'ìˆ˜', 'ëª©', 'ê¸ˆ', 'í† '];</span>
		<span class="c1">// ê°’ì„ ë„£ê³ ì‹¶ìœ¼ë©´ 'ì›í•˜ëŠ” ê°‘ìœ„ì¹˜ = ë„£ê³ ì‹¶ì€ ê°’'ì„ í•´ì¤€ë‹¤.</span>
		<span class="nb">document</span><span class="p">.</span><span class="nx">frm1</span><span class="p">.</span><span class="nx">w</span><span class="p">.</span><span class="nx">value</span> <span class="o">=</span> <span class="nx">weeks</span><span class="p">[</span><span class="nx">mydate</span><span class="p">.</span><span class="nx">getDay</span><span class="p">()];</span>
