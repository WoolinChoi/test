		<span class="kd">var</span> <span class="nx">idx</span> <span class="o">=</span> <span class="nb">document</span><span class="p">.</span><span class="nx">frm</span><span class="p">.</span><span class="nx">play</span><span class="p">.</span><span class="nx">selectedIndex</span><span class="p">;</span>
