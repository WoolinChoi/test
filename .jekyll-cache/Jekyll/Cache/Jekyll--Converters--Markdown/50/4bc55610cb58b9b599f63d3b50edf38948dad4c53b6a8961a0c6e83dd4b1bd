<h2 id="formcheckjs">FormCheckJs</h2>
<div class="language-java highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="n">window</span><span class="o">.</span><span class="na">onload</span> <span class="o">=</span> <span class="n">function</span><span class="o">(){</span>
	<span class="c1">// var inputs = document.querySelectorAll('input');</span>
	<span class="c1">// var frm = document.getElementById('frm');</span>
	<span class="c1">// var inputs = document.getElementsByTagName("input");</span>
    <span class="kt">var</span> <span class="n">frm</span> <span class="o">=</span> <span class="n">document</span><span class="o">.</span><span class="na">querySelector</span><span class="o">(</span><span class="err">'#</span><span class="n">frm</span><span class="err">'</span><span class="o">);</span>
    <span class="kt">var</span> <span class="n">inputs</span> <span class="o">=</span> <span class="n">document</span><span class="o">.</span><span class="na">querySelectorAll</span><span class="o">(</span><span class="err">'</span><span class="n">input</span><span class="err">'</span><span class="o">);</span> 
    <span class="kt">var</span> <span class="n">arr</span> <span class="o">=</span>  <span class="o">[</span><span class="err">'</span><span class="n">babo</span><span class="sc">','</span><span class="n">geni</span><span class="sc">','</span><span class="n">idiot</span><span class="sc">','</span><span class="n">gdb</span><span class="err">'</span><span class="o">];</span>
      
    <span class="c1">//submit,aíƒœê·¸ì˜ ì—­í• ì„ ì œí•œí•˜ê¸° ìœ„í•´  </span>
    <span class="n">frm</span><span class="o">.</span><span class="na">onsubmit</span> <span class="o">=</span> <span class="n">function</span><span class="o">(</span><span class="n">e</span><span class="o">){</span>    
	    <span class="n">e</span><span class="o">.</span><span class="na">preventDefault</span><span class="o">();</span>
	    <span class="c1">// e.stopPropagation(); </span>
	    <span class="c1">// ìœ—ë‹¨ê³„ ì´ë²¤íŠ¸ë„ ë§‰ì•„ë¼</span>
	    <span class="kt">var</span> <span class="n">rule</span> <span class="o">=</span> <span class="n">frm</span><span class="o">.</span><span class="na">rule</span><span class="o">;</span>
	    <span class="kt">var</span> <span class="n">nickname</span> <span class="o">=</span> <span class="n">frm</span><span class="o">.</span><span class="na">nickname</span><span class="o">;</span>
	    <span class="c1">// alert(rule.checked) </span>
	    <span class="c1">// checkedì—ì„œëŠ” valueë§ê³  checked </span>
	    <span class="c1">// T/Fë°˜í™˜</span>
	    <span class="k">if</span><span class="o">(!</span><span class="n">rule</span><span class="o">.</span><span class="na">checked</span><span class="o">){</span>
	        <span class="n">alert</span><span class="o">(</span><span class="err">'</span><span class="n">ë™ì˜í•´ì£¼ì„¸ìš”</span><span class="err">'</span><span class="o">)</span>
	        <span class="k">return</span><span class="o">;</span> <span class="c1">//ëë‚´ê¸°</span>
	    <span class="o">}</span>
	    <span class="k">for</span><span class="o">(</span><span class="kt">var</span> <span class="n">i</span><span class="o">=</span><span class="mi">0</span><span class="o">;</span> <span class="n">i</span><span class="o">&lt;</span><span class="n">arr</span><span class="o">.</span><span class="na">length</span><span class="o">;</span> <span class="n">i</span><span class="o">++){</span>
	        <span class="k">if</span><span class="o">(!(</span><span class="n">inputs</span><span class="o">[</span><span class="mi">1</span><span class="o">].</span><span class="na">value</span> <span class="o">==</span> <span class="n">arr</span><span class="o">[</span><span class="n">i</span><span class="o">])){</span>
	           <span class="n">alert</span><span class="o">(</span><span class="err">'</span><span class="n">ë³„ëª…í™•ì¸</span><span class="err">'</span><span class="o">);</span>
	           <span class="k">return</span><span class="o">;</span>
	        <span class="o">}</span><span class="k">else</span><span class="o">{</span>
	           <span class="k">break</span><span class="o">;</span>
	        <span class="o">}</span>
	    <span class="o">}</span>
	    <span class="n">frm</span><span class="o">.</span><span class="na">submit</span><span class="o">();</span> <span class="c1">// ì—¬ê¸°ì„œ í•œë²ˆ ë” ë¶ˆëŸ¬ì¤˜ì•¼ ë„˜ì–´ê°</span>
    <span class="o">}</span>
<span class="o">}</span>
